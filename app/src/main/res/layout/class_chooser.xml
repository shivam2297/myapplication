<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1_hdpi"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:text="Please select your standard"
        android:textAlignment="center"
        android:textColor="#0a408a"
        android:textSize="20sp" />

    <Button
        android:id="@+id/class_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView3"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="122dp"
        android:background="@drawable/arrow_shape"
        android:elevation="0dp"
        android:padding="20dp"
        android:text="CLASS 11"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/class_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/class_11"
        android:layout_below="@+id/class_11"
        android:layout_marginTop="124dp"
        android:background="@drawable/arrow_shape"
        android:padding="20dp"
        android:text="CLASS 12"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>